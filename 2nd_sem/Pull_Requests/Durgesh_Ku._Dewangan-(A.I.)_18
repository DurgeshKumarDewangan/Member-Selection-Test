#include <stdio.h>

void collatz_conjecture(int n) {
    
    printf("%d ", n);
    
    
    while (n != 1) {
        if (n % 2 == 0) {
            n = n / 2;
        } else {
            n = 3 * n + 1;
        }
        printf("%d ", n);
    }
}

int main() {
    int n;
    printf("Enter a positive integer: ");
    scanf("%d", &n);
    
    if (n > 0) {
        collatz_conjecture(n);
    } else {
        printf("Please enter a positive integer.\n");
    }
    
    return 0;
}
